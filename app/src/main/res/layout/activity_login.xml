<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@mipmap/planodefundo">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginStart="114dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="114dp"
        android:src="@mipmap/sausage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="173dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="173dp"
        android:fontFamily="sans-serif-black"
        android:text="Login"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="325dp"
        android:src="@mipmap/login"
        app:layout_constraintEnd_toStartOf="@+id/login_campo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_campo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/button_bg"
        android:fontFamily="sans-serif-black"
        android:hint="@string/hint_login"
        android:textAlignment="center"
        android:textColor="#000"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="5dp"
        android:src="@mipmap/password"
        app:layout_constraintEnd_toStartOf="@+id/senha_campo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="436dp"
        android:layout_marginEnd="436dp"
        android:layout_marginBottom="430dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/password_account"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/senha_campo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/button_bg"
        android:fontFamily="sans-serif-black"
        android:hint="@string/hint_pass"
        android:password="true"
        android:textAlignment="center"
        android:textColor="#000"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_campo" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_button_bg"
        android:fontFamily="sans-serif-black"
        android:onClick="Login"
        android:text="@string/btn_login"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/senha_campo" />

    <Button
        android:id="@+id/btn_cadastro"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/login_button_bg"
        android:fontFamily="sans-serif-black"
        android:onClick="Create"
        android:text="@string/btn_cadastro"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/senha_campo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="121dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-black"
        android:onClick="EsqueciSenha"
        android:text="@string/forgot_password"
        android:textSize="18dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>