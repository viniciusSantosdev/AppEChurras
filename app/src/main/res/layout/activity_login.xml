<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/planodefundo"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-206dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:context="br.com.echurras2.LoginActivity"
            android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="100dp"
                    android:src="@mipmap/sausage"
                    />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/login"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginTop="40dp"/>

                <EditText
                    android:id="@+id/login_campo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="-45dp"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/button_bg"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/login_account"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/password"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginTop="50dp"/>

                <EditText
                    android:id="@+id/senha_campo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="-45dp"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/button_bg"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/password_account"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/login_button_bg"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/btn_login"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/btn_cadastro"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="-39dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/login_button_bg"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/btn_cadastro"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/forgot_password"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="80dp"
                    android:text="EChurras copyright"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>