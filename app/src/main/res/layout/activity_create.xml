<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/fundoextendido"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-206dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="br.com.echurras2.LoginActivity"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="130dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Nome"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="italic"/>

                <EditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/button_bg"
                    android:hint="Coloque seu Nome"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="130dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Sobrenome"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="italic"/>

                <EditText
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/button_bg"
                    android:hint="Coloque seu Sobrenome"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="115dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Username"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="italic"/>

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/button_bg"
                    android:hint="Coloque seu Username"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="130dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Login"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="italic"/>

                <EditText
                    android:id="@+id/et_login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/button_bg"
                    android:hint="Coloque seu Login"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="130dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Senha"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="italic"/>

                <EditText
                    android:id="@+id/et_pass"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/button_bg"
                    android:hint="Coloque sua Senha"
                    android:password="true"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="130dp"
                    android:fontFamily="sans-serif-black"
                    android:text="E-mail"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="italic"/>

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/button_bg"
                    android:hint="teste@example.com"
                    android:inputType="textEmailAddress"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_create_account"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/login_button_bg"
                    android:fontFamily="sans-serif-black"
                    android:text="Cadastrar"
                    android:textSize="18sp"
                    android:textStyle="italic" />

            </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>